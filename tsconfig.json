{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext"],
    "types": ["node", "@types/jest"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noLib": false,
    "noImplicitAny": false,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "types"],
    "resolveJsonModule": true,
    "incremental": true,
    "importHelpers": true,
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env", "src/config"],
  "exclude": [
    "node_modules",
    ".yarn",
    "src/http",
    "src/logs",
    "src/tests",
    "**/*.spec.ts"
  ]
}
